DATABASE : https://docs.google.com/spreadsheets/d/1kteNbUTwSUdu8izKqBJSX5AeIQYN6xNp7T9sNfeWXnM/copy


function doPost(e) {
  const sheet = SpreadsheetApp.getActiveSpreadsheet().getSheetByName('Form');
  const data = JSON.parse(e.postData.contents);

  const now = new Date();
  const dateString = now.toLocaleDateString();
  const timeString = now.toLocaleTimeString();

  sheet.appendRow([dateString, timeString, data.name, data.email, "'"+data.tel, data.address]);

  return ContentService.createTextOutput(JSON.stringify({ status: 'success' })).setMimeType(ContentService.MimeType.JSON);
}


